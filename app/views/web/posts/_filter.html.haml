= simple_form_for @search, url: posts_path, :html => { :class => 'form-horizontal' }, method: :get do |f|
  = f.input :title_cont
  = f.input :content_cont
  = f.input :state_in, as: :chosen_select, collection: Post.state_machine.states.map { |s| [s.human_name, s.name] }, input_html: { data: { placeholder: t(".state") }}, label: han(:post, :state)
  = f.submit t(".search"), class: 'btn btn-primary'
