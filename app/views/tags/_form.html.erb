<%= simple_fields_for :tags do |tag_form| %>
  <div class="field">
    <%= tag_form.input :name, as: :string, label: 'Tag: ' %>
  </div>
  <% unless tag_form.object.nil? || tag_form.object.new_record? %>
    <div class="field">
      <%= tag_form.input :_destroy, as: :boolean, label: 'Remove: ' %>
    </div>
  <% end %>
<% end %>