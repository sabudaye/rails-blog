%p
  %h1
    = @post.name
%p
  %h2
    = @post.title
%p= @post.content

%section#post-tags 
  %p
    %h4 
      Tags:
    = join_tags(@post)
%section#post-comments 
  %legend
    Comments
  = render @post.comments
  %legend
    Add a comment:
  = render "comments/form"

  = link_to 'Edit Post', edit_post_path(@post)
  |
  \#{link_to 'Back to Posts', posts_path} |
